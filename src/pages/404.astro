---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found - jeansy.org" description="The page you are looking for could not be found.">
  <div class="max-w-3xl mx-auto text-center py-16">
    <h1 class="text-4xl font-bold mb-4" style="color: var(--text-primary);">404</h1>
    <p class="text-xl mb-8" style="color: var(--text-secondary);">Page Not Found</p>
    <p class="mb-8" style="color: var(--text-muted);">
      The page you are looking for does not exist or has been moved.
    </p>
    <div class="flex gap-4 justify-center">
      <a
        href="/"
        style="color: var(--link-color); text-decoration: none;"
        class="hover:underline px-4 py-2"
      >
        Go Home
      </a>
      <a
        href="/blog"
        style="color: var(--link-color); text-decoration: none;"
        class="hover:underline px-4 py-2"
      >
        View Blog
      </a>
    </div>
  </div>
</BaseLayout>
