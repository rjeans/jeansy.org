---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<BaseLayout title="Blog - jeansy.org">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-xl font-bold mb-8" style="color: var(--text-primary);">Blog</h1>
    
    {sortedPosts.length === 0 ? (
      <p class="text-center py-12" style="color: var(--text-secondary);">
        No blog posts yet. Check back soon for insights on engineering and IT management.
      </p>
    ) : (
      <div class="space-y-8">
        {sortedPosts.map((post) => (
          <article class="border-b pb-6" style="border-color: var(--border-color);">
            <div class="text-sm mb-2" style="color: var(--text-muted);">
              {new Date(post.data.pubDate).toLocaleDateString('en-GB', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit'
              })}
            </div>
            <h2 class="text-xl font-semibold mb-2">
              <a href={`/blog/${post.slug}`} style="color: var(--link-color); text-decoration: none;" class="hover:underline">
                {post.data.title}
              </a>
            </h2>
            <p style="color: var(--text-secondary); line-height: 1.6;">
              {post.data.description}
            </p>
          </article>
        ))}
      </div>
    )}
  </div>
</BaseLayout>